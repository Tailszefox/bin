#!/bin/bash

# Update the system

user=`whoami`

if [[ $user != "root" ]]; then
    sudo /home/tails/bin/update
    exit
fi

echo "Checking if apt isn't running already..."
pgrep -U root -l apt

if [[ $? -ne 1 ]]; then
    echo "apt is already running, giving up..."
    exit
fi

aptitude update
aptitude safe-upgrade
aptitude full-upgrade
