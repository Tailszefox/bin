# Download URLs in the clipboard with youtube-convert

url=`xclip -selection clipboard -o`

url=$(tr -dc '[[:print:]]' <<< "$url")
url="$(echo "$url" | sed -e 's/[()&]/\\&/g')"
urlQuotes="$(echo "$url" | sed -e 's/\([^ ]\+\)/"\1"/g')"
sed -i.bak 's%;yc$%;youtube-convert -i '$urlQuotes'%g' $HISTFILE
fc -R
cd ~/Bureau/offline
youtube-convert -i $url